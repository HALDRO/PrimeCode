{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"emitDeclarationOnly": true,
		"outDir": "../../out/build-cache/webview",
		"declarationDir": "../../out/build-cache/types-webview",
		"tsBuildInfoFile": "../../out/build-cache/webview.tsbuildinfo",
		"allowImportingTsExtensions": true,
		"types": ["node"],
		"rootDirs": [".", "../types", "../shared"]
	},
	"include": ["./**/*.ts", "./**/*.tsx"],
	"references": [{ "path": "../types" }, { "path": "../shared" }],
	"exclude": ["node_modules"]
}
