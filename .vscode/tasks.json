// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"type": "shell",
			"command": "bun run watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				{
					"owner": "typescript-watch",
					"fileLocation": ["relative", "${workspaceFolder}"],
					"pattern": {
						"regexp": "^\\[\\d+\\]\\s*([^\\s].*?)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+TS(\\d+):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"code": 5,
						"message": 6
					},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\$|vite|Starting compilation|File change detected",
					"endsPattern": "ready in \\d+|Watching for file changes|Found \\d+ error"
				}
				}
			],
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		},
		{
			"label": "build",
			"type": "shell",
			"command": "bun run build",
			"group": "build",
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}
